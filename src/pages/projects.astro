---
// This is the Recent Projects page
import '../styles/globals.css';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0" />
    <meta name="theme-color" content="#87ceeb" />
    <title>Rust Projects - Days Without</title>
  </head>
  <body class="min-h-screen beach-background">
    <div class="container py-6 sm:py-10 px-4 sm:px-0 mx-auto">
      <h1 class="text-3xl sm:text-4xl font-bold text-center mb-2">Rust Projects</h1>
      <p class="text-center text-slate-500 dark:text-slate-400 mb-6 sm:mb-8">A list of your favorite Rust projects.</p>
      
      <div class="flex flex-col items-center">
        <div class="w-full max-w-md mx-auto">
          <div class="rounded-xl border bg-card text-card-foreground shadow-lg p-4 sm:p-6 hover:shadow-xl transition-shadow duration-300">
            <div class="bg-gradient-to-r from-slate-50 to-white dark:from-slate-900 dark:to-slate-800 -mx-4 sm:-mx-6 -mt-4 sm:-mt-6 p-4 sm:p-6 mb-4 sm:mb-6 rounded-t-xl">
              <h2 class="text-xl sm:text-2xl font-bold tracking-tight">Project History</h2>
            </div>
            
            <div id="projects-container" class="bg-slate-50 dark:bg-slate-900/50 rounded-xl p-3 sm:p-4">
              <p class="text-center text-slate-500 dark:text-slate-400">Loading projects...</p>
            </div>

            <div class="mt-6 sm:mt-8 text-center">
              <a href="/" class="inline-flex items-center justify-center whitespace-nowrap rounded-lg text-sm font-medium ring-offset-background transition-all focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-gradient-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-700 text-white h-10 sm:h-12 px-4 sm:px-5 py-2 shadow-md hover:shadow-lg transform hover:-translate-y-0.5 active:translate-y-0">
                Back to Counter
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script>
      // Function to load and display projects
      async function loadProjects() {
        const projectsContainer = document.getElementById('projects-container');
        
        try {
          // Fetch all projects from the API
          const response = await fetch('/api/all-projects');
          
          if (!response.ok) {
            const errorData = await response.json();
            throw new Error(`API error: ${errorData.error || response.statusText}`);
          }
          
          const data = await response.json();
          const projects = data.projects;
          
          if (!projects || projects.length === 0) {
            projectsContainer.innerHTML = '<p class="text-center text-slate-500 dark:text-slate-400">No projects submitted yet.</p>';
            return;
          }
          
          // Create project list
          const ul = document.createElement('ul');
          ul.className = 'space-y-4';
          
          projects.forEach((project, index) => {
            const li = document.createElement('li');
            const projectDate = new Date(project.submitted_at);
            
            // Format date in a more concise way
            const formattedDate = projectDate.toLocaleDateString(undefined, { 
              year: 'numeric', 
              month: 'short', 
              day: 'numeric' 
            });
            const formattedTime = projectDate.toLocaleTimeString(undefined, {
              hour: '2-digit',
              minute: '2-digit'
            });
            
            // Create tags display if tags exist
            const tagsHtml = project.tags && project.tags.length > 0 ? 
              `<div class="flex flex-wrap gap-1.5 mt-2 sm:mt-3">${project.tags.map(tag => 
                `<span class="bg-white dark:bg-slate-800 text-slate-600 dark:text-slate-300 text-xs px-2 py-1 rounded-full font-medium">${tag}</span>`
              ).join('')}</div>` : '';
            
            // Create GitHub username link if provided
            const githubLink = project.username ? 
              `<a href="https://github.com/${project.username}" target="_blank" rel="noopener noreferrer" class="text-red-500 hover:text-red-700 font-medium">${project.username}</a>` :
              '';
              
            // Handle project URL
            const projectUrl = project.url ? 
              `<a href="${project.url}" target="_blank" rel="noopener noreferrer" class="text-sm text-red-500 hover:text-red-700 hover:underline break-all">${project.url}</a>` : 
              '';
            
            li.className = "p-3 sm:p-4 rounded-lg border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800/50 shadow-sm hover:shadow transition-shadow";
            li.innerHTML = `
              <div class="flex justify-between items-start">
                <div class="space-y-1.5 sm:space-y-2 flex-1">
                  <h3 class="font-bold text-base sm:text-lg">${project.name}</h3>
                  ${projectUrl ? `<div>${projectUrl}</div>` : ''}
                  ${project.description ? `<p class="text-xs sm:text-sm text-slate-600 dark:text-slate-300">${project.description}</p>` : ''}
                  <div class="text-xs text-slate-500 dark:text-slate-400 mt-1.5 sm:mt-2">
                    ${githubLink ? `Created by ${githubLink}` : ''}
                    <span class="block mt-1 bg-slate-100 dark:bg-slate-700 rounded-full px-2 py-1 inline-block">${formattedDate} at ${formattedTime}</span>
                  </div>
                  ${tagsHtml}
                </div>
                <span class="bg-gradient-to-r from-slate-100 to-slate-200 dark:from-slate-800 dark:to-slate-700 text-slate-600 dark:text-slate-300 text-xs px-2 py-1 sm:px-2.5 sm:py-1.5 rounded-full ml-2 shrink-0 font-bold">#${index + 1}</span>
              </div>
            `;
            ul.appendChild(li);
          });
          
          projectsContainer.innerHTML = '';
          projectsContainer.appendChild(ul);
        } catch (err) {
          console.error('Unexpected error:', err);
          projectsContainer.innerHTML = `<p class="text-center text-slate-500 dark:text-slate-400">Error loading projects: ${err.message}</p>`;
        }
      }
      
      // Load the projects when the DOM is loaded
      document.addEventListener('DOMContentLoaded', loadProjects);
    </script>
  </body>
</html>
