---
// This is the frontmatter section of the Astro component
// You can add JavaScript code here
import DaysWithoutRust from '../components/DaysWithoutRust.astro';
import '../styles/globals.css';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0" />
    <meta name="theme-color" content="#87ceeb" />
    <title>Days Without</title>
  </head>
  <body class="min-h-screen beach-background">
    <!-- Beach elements -->
    <div class="sun hidden sm:block"></div>
    <div class="cloud cloud-1 hidden sm:block"></div>
    <div class="cloud cloud-2 hidden sm:block"></div>
    <div class="cloud cloud-3 hidden sm:block"></div>
    <div class="water-waves"></div>
    
    <!-- Ferris mascot -->
    <div class="ferris-mascot hidden sm:block"></div>
    
    <div class="container mx-auto px-4 sm:px-0 relative z-10">
      <div class="flex justify-center items-center min-h-[80vh] py-8">
        <DaysWithoutRust />
      </div>
    </div>
  </body>
</html>
