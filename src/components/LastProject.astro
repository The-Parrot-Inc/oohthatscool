---
import { initializeSupabase } from '../lib/supabase';

// Fetch data on the server side
let project = null;
let error = null;
let formattedDate;
let formattedTime;

try {
  const supabase = initializeSupabase();
  
  // Fetch projects from Supabase
  const { data: projects, error: supabaseError } = await supabase
    .from('rust_projects')
    .select('*')
    .eq('active', true)
    .order('submitted_at', { ascending: false })
    .limit(1);
  
  if (supabaseError) {
    console.error('Error loading last project:', supabaseError);
    error = 'Failed to load project';
  } else if (projects && projects.length > 0) {
    // Get the first (most recent) project
    project = projects[0];
    
    // Format date in a more concise way
    if (project) {
      const projectDate = new Date(project.submitted_at);
      formattedDate = projectDate.toLocaleDateString(undefined, { 
        year: 'numeric', 
        month: 'short', 
        day: 'numeric' 
      });
      formattedTime = projectDate.toLocaleTimeString(undefined, {
        hour: '2-digit',
        minute: '2-digit'
      });
    }
  }
} catch (err) {
  console.error('Error loading last project:', err);
  error = 'Failed to load project';
}
---

{error && <div class="text-xs sm:text-sm text-red-500">Error loading project: {error}</div>}

{!error && !project && <div class="text-xs sm:text-sm text-slate-500 dark:text-slate-400">No projects submitted yet</div>}

{!error && project && (
  <div class="bg-white dark:bg-slate-800/70 rounded-lg p-3 sm:p-4 shadow-sm">
    <div class="flex justify-between items-start">
      <div class="space-y-1.5 sm:space-y-2">
        <div class="flex items-center">
          <h3 class="font-bold text-base sm:text-lg text-slate-800 dark:text-slate-100">
            {project.name}
          </h3>
          <span class="inline-flex items-center bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-300 text-xs px-2 py-0.5 rounded-full ml-2 font-medium">
            Latest
          </span>
        </div>
        
        {project.url && (
          <a 
            href={project.url} 
            target="_blank" 
            rel="noopener noreferrer" 
            class="text-xs sm:text-sm text-red-500 hover:text-red-700 hover:underline break-all inline-block"
          >
            {project.url}
          </a>
        )}
        
        {project.description && (
          <p class="text-xs sm:text-sm text-slate-600 dark:text-slate-300">
            {project.description}
          </p>
        )}
        
        <div class="flex flex-wrap sm:flex-nowrap sm:items-center text-xs text-slate-500 dark:text-slate-400">
          <span class="flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-3 sm:h-3.5 w-3 sm:w-3.5 mr-1" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
            </svg>
            {project.username && (
              <a 
                href={`https://github.com/${project.username}`} 
                target="_blank" 
                rel="noopener noreferrer" 
                class="text-red-500 hover:text-red-700 font-medium"
              >
                {project.username}
              </a>
            )}
          </span>
          
          <span class="hidden sm:inline mx-2">â€¢</span>
          
          <span class="flex items-center mt-1 sm:mt-0">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-3 sm:h-3.5 w-3 sm:w-3.5 mr-1" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
            </svg>
            {formattedDate} at {formattedTime}
          </span>
        </div>
        
        {project.tags && project.tags.length > 0 && (
          <div class="flex flex-wrap gap-1 sm:gap-1.5 pt-1">
            {project.tags.map((tag) => (
              <span 
                class="bg-slate-100 dark:bg-slate-700 text-slate-600 dark:text-slate-300 text-[10px] sm:text-xs px-2 py-0.5 sm:px-2.5 sm:py-1 rounded-full font-medium"
              >
                {tag}
              </span>
            ))}
          </div>
        )}
      </div>
    </div>
  </div>
)} 